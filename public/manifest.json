{
  "manifest_version": 2,
  "name": "Subtitles Seeker",
  "icons":{
    "123":"YouTube search.svg"
  },

  "version": "0.9",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["build/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["build/content-script.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; https://www.youtube.com/iframe_api; object-src 'self'"
}
